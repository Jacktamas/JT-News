<div class="row">
  {{#each dbArticles}}
  <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
    <div class="cardsContainer">
      <div class="card" data-title="{{title}}" data-imgsrc="{{imgSrc}}" data-link="{{link}}">
        <div class="row">
          <div class="imgCard col-xs-5 col-md-4">
            <img class="img" src="{{imgSrc}}" alt="{{title}}" >
          </div>
          <div class="col-xs-7 col-md-8 fitText">
            <h4 class="article-title">{{title}}</h4>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 col-md-12 col-lg-12">
          <button type="button" class="btn btn-primary viewComments">View Comments <span class="caret"></span></button>
          <div class="commentCard">
            <div class="detailBox">
              <div class="actionBox">
                <ul class="commentList" data-id="{{_id}}">
                  {{#each comments}}
                  <li>
                    <div class="commentText">
                      <p class="shadow red"><span class="glyphicon glyphicon-user black"> </span> {{#if user}}{{user}}{{else}}Anonymous{{/if}}:</p>
                      <p>{{body}}</p> <span class="date sub-text">on {{date}}</span>
                    </div>
                  </li>
                  <hr>
                  {{/each}}
                </ul>
                <form class="form-inline commentForm" role="form" data-id="{{_id}}">
                  <div class="form-group">
                    <input class="form-control user" type="text" placeholder="Your Name ..." required/>
                    <input class="form-control body" type="text" placeholder="Your comments" required/>
                  </div>
                  <div class="form-group">
                    <button type="btn" class="btn btn-default commentBtn">Add</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>
